{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "PRISMA_GENERATE": "true",
      "RAZORPAY_KEY_ID": "@razorpay_key_id",
      "RAZORPAY_KEY_SECRET": "@razorpay_key_secret"
    }
  }
} 